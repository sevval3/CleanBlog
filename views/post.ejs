


<!-- Head -->
<%- include('partials/_header') -%>


<body>

<!-- Navigation -->
<%- include('partials/_navigation') -%>


  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1> <%= post.title %></h1>
            <h2 class="subheading"> <%= post.detail.substring(0,25) %>...</h2>
            <span class="meta">Posted by
              <a href="/">Sevval Oztekin</a>
              <%= post.createDate.toString().substring(0,21) %>
            </span>
 
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= post.detail %>
        </div>
        <span class="meta">
          <a href="/delete/<%= post.id %>?_method=DELETE"  onclick="return  confirm('ARE YOU SURE?')" class="btn border">Delete ❌ </a>
          <a href="/edit_post/<%= post.id %>" class="btn border">Edit ✍</a>
        </span>
      </div>
    </div>
  </article>

  <hr>

<!-- Footer -->
<%- include('partials/_footer') -%>

</body>

</html>