
<!-- Head -->
<%- include('partials/_header') -%>


<body>

<!-- Navigation -->
<%- include('partials/_navigation') -%>


  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Add New Post</h1>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form action="/posts" method="POST" novalidate>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <h4>Post Title</h4>
              <input type="text" class="form-control" placeholder="Title" name="title" required data-validation-required-message="Please Enter a Post Title.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <h4>Post Content</h4>
              <textarea rows="5" class="form-control" placeholder="Detail" name="detail" required data-validation-required-message="Please Enter a Detail."></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary float-right" id="sendMessageButton">ADD</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

 <!-- Footer -->
 <%- include('partials/_footer') -%> 
 
  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

</body>

</html>